<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/listDeviderColor"
        android:orientation="horizontal"
        android:padding="0.5dp">

        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@android:color/white">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                app:cardCornerRadius="15dp"
                >
                <ImageView
                    android:id="@+id/batteryImageView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/person"/>
            </androidx.cardview.widget.CardView>

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="15"
            >
                <TextView
                    android:id="@+id/batteryBrandNameTextView"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="match_parent"
                    android:text="Brand Name"
                    android:textSize="18sp"
                    android:gravity="start|center_vertical"
                    android:background="@android:color/white"
                    android:textColor="@color/blackTextColor"
                    android:fontFamily="@font/segoe_ui"
                    android:paddingStart="10dp"
                    android:layout_marginStart="0.5dp"
                    android:maxLines="2"
                    android:ellipsize="end"/>

                <TextView
                    android:id="@+id/batterySkuTextView"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="match_parent"
                    android:text="SKU"
                    android:paddingStart="10dp"
                    android:textSize="18sp"
                    android:background="@android:color/white"
                    android:gravity="start|center_vertical"
                    android:textColor="@color/blackTextColor"
                    android:layout_marginStart="0.5dp"
                    android:fontFamily="@font/segoe_ui"
                    android:maxLines="2"
                    android:ellipsize="end"/>

                <TextView
                    android:id="@+id/batteryTypeTextView"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="match_parent"
                    android:text="batteryType"
                    android:textSize="18sp"
                    android:layout_marginStart="0.5dp"
                    android:background="@android:color/white"
                    android:textColor="@color/blackTextColor"
                    android:paddingStart="10dp"
                    android:gravity="start|center_vertical"
                    android:fontFamily="@font/segoe_ui"
                    android:maxLines="2"
                    android:ellipsize="end"/>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="match_parent"
                    android:background="@android:color/white"
                    android:layout_marginStart="0.5dp"
                    >
                    <TextView
                        android:id="@+id/priceTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Price"
                        android:textSize="18sp"
                        android:layout_centerVertical="true"
                        android:textColor="@color/blackTextColor"
                        android:layout_margin="5dp"
                        android:fontFamily="@font/segoe_ui"
                        android:maxLines="2"
                        android:ellipsize="end"/>
                </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="#fff"
                android:layout_marginStart="0.5dp"
                android:padding="5dp">


                <ImageView
                    android:id="@+id/editListBtn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_edit_black"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="5dp" />
                <ImageView
                    android:id="@+id/assignBtrToTech"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_assign"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@id/editListBtn"
                    android:layout_marginBottom="5dp" />

                <ImageView
                    android:id="@+id/deleteListBtn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/ic_delete_black"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/editListBtn"/>

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>