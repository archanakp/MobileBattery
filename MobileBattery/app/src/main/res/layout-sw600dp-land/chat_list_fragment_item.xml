<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="88dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="88dp"
                android:layout_height="match_parent"
                android:padding="10dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/personOneProfileImage"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/person"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    app:civ_border_color="@color/whiteBcgColor"
                    app:civ_border_width="1dp"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/personTwoProfileImage"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/person"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    app:civ_border_color="@color/whiteBcgColor"
                    app:civ_border_width="1dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingStart="5dp"
                android:paddingEnd="10dp">

                <View
                    android:id="@+id/center"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_centerInParent="true"/>

                <TextView
                    android:id="@+id/senderAndReceiverNameTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rupesh Singh, Mahi Yadav"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColor="@color/blueOne"
                    android:fontFamily="@font/segoe_ui_bold"
                    android:textSize="20sp"
                    android:layout_alignParentStart="true"
                    android:layout_toStartOf="@id/goNextIV"
                    android:layout_above="@id/center"/>

                <TextView
                    android:id="@+id/lastMessageTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hi sir are you working today on my project"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColor="@color/fontContentColor"
                    android:fontFamily="@font/segoe_ui_bold"
                    android:textSize="18sp"
                    android:layout_alignParentStart="true"
                    android:layout_toStartOf="@id/lastMessageTimeTV"
                    android:layout_below="@id/center"/>

                <TextView
                    android:id="@+id/lastMessageTimeTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15:02"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColor="@color/fontContentColor"
                    android:fontFamily="@font/segoe_ui_bold"
                    android:textSize="18sp"
                    android:layout_marginEnd="10dp"
                    android:layout_toStartOf="@id/goNextIV"
                    android:layout_below="@id/center"/>

                <ImageView
                    android:id="@+id/goNextIV"
                    android:layout_width="20dp"
                    android:layout_height="60dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_navigate_next"/>

            </RelativeLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/mobileListDividerColor"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>

</LinearLayout>