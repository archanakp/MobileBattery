<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.RegistrationScreen">


    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/back_arrow_blue"
        android:layout_marginTop="20dp"
        android:onClick="goBack"
        android:layout_marginStart="20dp"/>

    <ScrollView
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="65sp"
                android:text="@string/app_sort_name"
                android:fontFamily="@font/segoe_ui"
                android:textColor="@color/blueOne"
                android:layout_marginTop="40dp"/>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView

                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="30dp"
                    android:src="@drawable/email_icon"
                    android:scaleType="centerCrop"
                    app:civ_border_width="2dp"
                    app:civ_border_color="#FF05a4f5"/>

                <EditText
                    android:id="@+id/firstNameEditText"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="10dp"
                    android:textColorHint="@color/textHintColor"
                    android:hint="First Name"
                    android:paddingStart="10dp"
                    android:inputType="textEmailAddress"
                    android:layout_marginEnd="20dp"
                    android:paddingEnd="5dp"
                    android:backgroundTint="@color/blueOne"
                    android:maxLines="1"
                    android:textSize="22sp"
                    android:textColor="@color/blackColor"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView

                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="30dp"
                    android:src="@drawable/email_icon"
                    android:scaleType="centerCrop"
                    app:civ_border_width="2dp"
                    app:civ_border_color="#FF05a4f5"/>

                <EditText
                    android:id="@+id/lastNameEditText"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="10dp"
                    android:textColorHint="@color/textHintColor"
                    android:hint="Last Name"
                    android:paddingStart="10dp"
                    android:inputType="textEmailAddress"
                    android:layout_marginEnd="20dp"
                    android:paddingEnd="5dp"
                    android:backgroundTint="@color/blueOne"
                    android:maxLines="1"
                    android:textSize="22sp"
                    android:textColor="@color/blackColor"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView

                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="30dp"
                    android:src="@drawable/mail_icon"
                    android:scaleType="centerCrop"
                    app:civ_border_width="2dp"
                    app:civ_border_color="#FF05a4f5"/>

                <EditText
                    android:id="@+id/emailIdEditText"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="10dp"
                    android:textColorHint="@color/textHintColor"
                    android:hint="@string/email_id"
                    android:paddingStart="10dp"
                    android:inputType="textEmailAddress"
                    android:layout_marginEnd="20dp"
                    android:paddingEnd="5dp"
                    android:backgroundTint="@color/blueOne"
                    android:maxLines="1"
                    android:textSize="22sp"
                    android:textColor="@color/blackColor"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView

                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="30dp"
                    android:src="@drawable/phone_icon"
                    android:scaleType="centerCrop"
                    app:civ_border_width="2dp"
                    app:civ_border_color="#FF05a4f5"/>

                <EditText
                    android:id="@+id/phoneNoEditText"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:backgroundTint="@color/blueOne"
                    android:hint="Phone No."
                    android:inputType="phone"
                    android:maxLength="10"
                    android:maxLines="1"
                    android:paddingStart="10dp"
                    android:paddingEnd="5dp"
                    android:textColor="@color/blackColor"
                    android:textColorHint="@color/textHintColor"
                    android:textSize="22sp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView

                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="30dp"
                    android:src="@drawable/user_type"
                    android:scaleType="centerCrop"
                    app:civ_border_width="2dp"
                    app:civ_border_color="#FF05a4f5"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="25dp"
                    android:background="@drawable/line">

                    <Spinner
                        android:id="@+id/userTypeSpinner"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:entries="@array/user_type" />

                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:src="@drawable/drop_down_arrow"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"/>

                </RelativeLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView

                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="30dp"
                    android:src="@drawable/lock_icon"
                    android:scaleType="centerCrop"
                    app:civ_border_width="2dp"
                    app:civ_border_color="#FF05a4f5"/>

                <EditText
                    android:id="@+id/passwordEditText"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="10dp"
                    android:textColorHint="@color/textHintColor"
                    android:hint="@string/password"
                    android:paddingStart="10dp"
                    android:inputType="textPassword"
                    android:layout_marginEnd="20dp"
                    android:paddingEnd="5dp"
                    android:backgroundTint="@color/blueOne"
                    android:maxLines="1"
                    android:textSize="22sp"
                    android:textColor="@color/blackColor"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="30dp"
                    android:src="@drawable/lock_icon"
                    app:civ_border_width="2dp"
                    app:civ_border_color="#FF05a4f5"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="20dp"
                    >
                    <EditText
                        android:id="@+id/conPasswordEditText"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:textColorHint="@color/textHintColor"
                        android:hint="Confirm Password"
                        android:paddingStart="10dp"
                        android:paddingEnd="5dp"
                        android:backgroundTint="@color/blueOne"
                        android:maxLines="1"
                        android:textSize="22sp"
                        android:textColor="@color/blackColor"
                        />


                </RelativeLayout>

            </LinearLayout>




            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Register"
                android:textColor="@android:color/white"
                android:textSize="22sp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:fontFamily="@font/segoe_ui"
                android:layout_marginTop="20dp"
                android:background="@drawable/login_button_bcg"
                android:onClick="registerBtn"
                android:paddingEnd="30dp"
                android:paddingStart="30dp"
                />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign In !"
                android:textColor="@color/blueOne"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:onClick="signIn"
                android:fontFamily="@font/segoe_ui"
                android:layout_marginBottom="30dp"
                />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>