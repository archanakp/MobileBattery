<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal"
    android:background="@color/listDeviderColor"
    android:padding="0.5dp"
    android:weightSum="14">
    <TextView
        android:id="@+id/supplierNameTextView"
        android:layout_width="0dp"
        android:layout_weight="4"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="@android:color/white"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/blackTextColor"
        android:textSize="22sp"
        android:fontFamily="@font/segoe_ui"
        />
    <TextView
        android:id="@+id/supplierEmailTextView"
        android:layout_width="0dp"
        android:layout_weight="4.5"
        android:layout_height="match_parent"
        android:layout_marginStart="0.5dp"
        android:gravity="center"
        android:background="@android:color/white"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/blackTextColor"
        android:textSize="22sp"
        android:fontFamily="@font/segoe_ui"
        />
    <TextView
        android:id="@+id/supplierPhoneTextView"
        android:layout_width="0dp"
        android:layout_weight="3.5"
        android:layout_height="match_parent"
        android:layout_marginStart="0.5dp"
        android:gravity="center"
        android:background="@android:color/white"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/blackTextColor"
        android:textSize="22sp"
        android:fontFamily="@font/segoe_ui"
        />
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:layout_marginStart="0.5dp"
        >
        <View
            android:id="@+id/centerView"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"/>

        <ImageView
            android:id="@+id/editSupplierBtn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_edit_black"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/centerView"
            android:layout_marginEnd="5dp"/>

        <ImageView
            android:id="@+id/deleteSupplierBtn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_delete_black"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/centerView"
            android:layout_marginStart="5dp"/>

    </RelativeLayout>

</LinearLayout>

</LinearLayout>