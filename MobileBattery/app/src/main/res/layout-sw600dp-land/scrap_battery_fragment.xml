<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/relativeLayout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            >

            <Button
                android:id="@+id/addNewBatteryBtn"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:text="+ New Battery"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15dp"
                android:background="@drawable/login_button_bcg"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:orientation="horizontal"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@id/addNewBatteryBtn"
                android:weightSum="8"
                android:layout_marginEnd="15dp"
                >

                <RelativeLayout
                    android:id="@+id/relative"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_bcg"
                    android:layout_centerVertical="true">

                    <Spinner
                        android:id="@+id/sourceSpinner"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:gravity="center_vertical|start"
                        android:backgroundTint="@color/blueOne"
                        android:layout_marginBottom="2dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"/>



                </RelativeLayout>

                <EditText
                    android:id="@+id/searchByBrand"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="35dp"
                    android:focusable="auto"
                    android:background="@drawable/edit_text_bcg"
                    android:layout_marginStart="15dp"
                    android:layout_gravity="center_vertical"
                    android:hint="Brand"
                    android:paddingStart="10dp"
                    android:fontFamily="@font/segoe_ui"
                    android:textColor="@color/fontContentColor"
                    android:textColorHint="@color/fontContentColor"
                    android:textSize="18sp"/>


                <EditText
                    android:id="@+id/searchBySKUET"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="35dp"
                    android:focusable="auto"
                    android:background="@drawable/edit_text_bcg"
                    android:layout_gravity="center_vertical"
                    android:hint="SKU"
                    android:paddingStart="10dp"
                    android:layout_marginStart="15dp"
                    android:fontFamily="@font/segoe_ui"
                    android:textColor="@color/fontContentColor"
                    android:textColorHint="@color/fontContentColor"
                    android:textSize="18sp"/>

                <EditText
                    android:id="@+id/searchBySizeET"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="35sp"
                    android:focusable="auto"
                    android:background="@drawable/edit_text_bcg"
                    android:layout_marginStart="15dp"
                    android:layout_gravity="center_vertical"
                    android:hint="Size"
                    android:paddingStart="10dp"
                    android:visibility="gone"
                    android:fontFamily="@font/segoe_ui"
                    android:textColor="@color/fontContentColor"
                    android:textColorHint="@color/fontContentColor"
                    android:textSize="18sp"/>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="35dp"
                    android:layout_marginStart="15dp">

                    <ImageButton
                        android:id="@+id/refreshFilter"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:background="@drawable/login_button_bcg"
                        android:src="@drawable/ic_refresh_white"/>

                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/leble"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/listDeviderColor"
            android:orientation="horizontal"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="20dp"
            android:padding="0.5dp">

            <RelativeLayout
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@android:color/white">

            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="15"
                >
                <TextView
                    android:id="@+id/batteryBrandNameTextView"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="match_parent"
                    android:text="Brand Name"
                    android:textSize="22sp"
                    android:gravity="start|center_vertical"
                    android:background="@android:color/white"
                    android:textColor="@color/blueOne"
                    android:fontFamily="@font/segoe_ui_bold"
                    android:paddingStart="10dp"
                    android:layout_marginStart="0.5dp"
                    android:maxLines="2"
                    android:ellipsize="end"/>

                <TextView
                    android:id="@+id/batterySkuTextView"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="match_parent"
                    android:text="SKU"
                    android:paddingStart="10dp"
                    android:textSize="22sp"
                    android:background="@android:color/white"
                    android:gravity="start|center_vertical"
                    android:textColor="@color/blueOne"
                    android:layout_marginStart="0.5dp"
                    android:fontFamily="@font/segoe_ui_bold"
                    android:maxLines="2"
                    android:ellipsize="end"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="match_parent"
                    android:text="Size"
                    android:textSize="22sp"
                    android:layout_marginStart="0.5dp"
                    android:background="@android:color/white"
                    android:textColor="@color/blueOne"
                    android:paddingStart="10dp"
                    android:gravity="start|center_vertical"
                    android:fontFamily="@font/segoe_ui_bold"
                    android:maxLines="2"
                    android:ellipsize="end"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="match_parent"
                    android:text="Cost Price"
                    android:textSize="22sp"
                    android:layout_marginStart="0.5dp"
                    android:background="@android:color/white"
                    android:textColor="@color/blueOne"
                    android:paddingStart="10dp"
                    android:gravity="start|center_vertical"
                    android:fontFamily="@font/segoe_ui_bold"
                    android:maxLines="2"
                    android:ellipsize="end"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="match_parent"
                    android:text="Action"
                    android:textSize="22sp"
                    android:layout_marginStart="0.5dp"
                    android:background="@android:color/white"
                    android:textColor="@color/blueOne"
                    android:paddingStart="10dp"
                    android:gravity="start|center_vertical"
                    android:fontFamily="@font/segoe_ui_bold"
                    android:maxLines="2"
                    android:ellipsize="end"/>

            </LinearLayout>

        </LinearLayout>
        <TextView
            android:id="@+id/noResultFoundTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Result Found!"
            android:textSize="24sp"
            android:textColor="@color/fontHeadingColor"
            android:fontFamily="@font/segoe_ui_bold"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:visibility="gone"/>
        <ListView
            android:id="@+id/newBatteryList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:visibility="gone"
            android:scrollbars="none"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/batteryRecyclerList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:visibility="visible"
            android:scrollbars="none"/>

    </LinearLayout>

    <ScrollView
        android:id="@+id/addBatteryForm"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:background="@android:color/white"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/addNewBatteryFormLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/closeFormBtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="end"
                android:src="@drawable/ic_close_blue"
                android:layout_margin="10dp"/>

            <LinearLayout
                android:id="@+id/first"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginStart="70dp"
                android:layout_marginEnd="70dp"
                android:layout_centerHorizontal="true">



                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/line">

                    <TextView
                        android:id="@+id/battry"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Battery"
                        android:textColor="@color/fontHeadingColor"
                        android:textSize="19sp"/>

                    <EditText
                        android:id="@+id/batteryName"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_below="@id/battry"
                        android:backgroundTint="@android:color/transparent"
                        android:hint="Battery"
                        android:textColorHint="@color/fontContentColor"
                        android:textSize="18sp"
                        android:maxLines="1"
                        android:fontFamily="@font/segoe_ui"
                        android:textColor="@color/fontContentColor"
                        android:paddingStart="15dp"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/line">

                    <TextView
                        android:id="@+id/btrSrc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Battery Source Type"
                        android:textColor="@color/fontHeadingColor"
                        android:textSize="19sp"/>

                    <Spinner
                        android:id="@+id/addBatterySourceSpinner"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:backgroundTint="@color/blueOne"
                        android:gravity="center_vertical|start"
                        android:layout_below="@id/btrSrc"
                        android:paddingBottom="2dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"/>



                </RelativeLayout>



            </LinearLayout>

            <LinearLayout
                android:id="@+id/two"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_below="@id/first"
                android:layout_marginTop="25dp"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginStart="70dp"
                android:layout_marginEnd="70dp"
                android:layout_centerHorizontal="true">


                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/line">

                    <TextView
                        android:id="@+id/sourceTypeLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Technician"
                        android:textColor="@color/fontHeadingColor"
                        android:textSize="19sp"/>

                    <Spinner
                        android:id="@+id/addTechOrSupIdSpinner"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:backgroundTint="@color/blueOne"
                        android:gravity="center_vertical|start"
                        android:layout_centerVertical="true"
                        android:layout_below="@id/sourceTypeLabel"
                        android:paddingBottom="2dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/line">

                    <TextView
                        android:id="@+id/btrbrnd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Battery Brand"
                        android:textColor="@color/fontHeadingColor"
                        android:textSize="19sp"/>

                    <EditText
                        android:id="@+id/addBatteryBrandEditText"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:backgroundTint="@android:color/transparent"
                        android:layout_below="@id/btrbrnd"
                        android:hint="Battery Brand"
                        android:textColorHint="@color/fontContentColor"
                        android:textSize="18sp"
                        android:maxLines="1"
                        android:fontFamily="@font/segoe_ui"
                        android:textColor="@color/fontContentColor"
                        android:paddingStart="15dp"/>


                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/four"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="25dp"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginStart="70dp"
                android:layout_marginEnd="70dp"
                android:layout_centerHorizontal="true">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/line">

                    <TextView
                        android:id="@+id/btrqty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Battery Quantity"
                        android:textColor="@color/fontHeadingColor"
                        android:textSize="19sp"/>

                    <EditText
                        android:id="@+id/addQuantityEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/btrqty"
                        android:backgroundTint="@android:color/transparent"
                        android:hint="Quantity"
                        android:textColorHint="@color/fontContentColor"
                        android:textSize="18sp"
                        android:maxLines="1"
                        android:inputType="number"
                        android:fontFamily="@font/segoe_ui"
                        android:textColor="@color/fontContentColor"
                        android:paddingStart="15dp"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/line">

                    <TextView
                        android:id="@+id/btrprc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cost Price"
                        android:textColor="@color/fontHeadingColor"
                        android:textSize="19sp"/>


                    <EditText
                        android:id="@+id/addCostPriceEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/btrprc"
                        android:backgroundTint="@android:color/transparent"
                        android:hint="Cost Price"
                        android:textColorHint="@color/fontContentColor"
                        android:textSize="18sp"
                        android:maxLines="1"
                        android:inputType="numberDecimal"
                        android:fontFamily="@font/segoe_ui"
                        android:textColor="@color/fontContentColor"
                        android:paddingStart="15dp"/>

                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/five"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="25dp"
                android:layout_below="@id/four"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginStart="70dp"
                android:layout_marginEnd="70dp"
                android:layout_centerHorizontal="true">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/line">

                    <TextView
                        android:id="@+id/btrSprcTp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sale Price Type"
                        android:textColor="@color/fontHeadingColor"
                        android:textSize="19sp"/>

                    <Spinner
                        android:id="@+id/addSalePriceTypeSpinner"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:backgroundTint="@color/blueOne"
                        android:layout_below="@id/btrSprcTp"
                        android:gravity="center_vertical|start"
                        android:paddingBottom="2dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"/>

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/line">

                    <TextView
                        android:id="@+id/btrSprc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lower Retail Sale Price"
                        android:textColor="@color/fontHeadingColor"
                        android:textSize="19sp"/>

                    <EditText
                        android:id="@+id/addLowerRetailSalePriceEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@android:color/transparent"
                        android:layout_below="@id/btrSprc"
                        android:hint="Lower Retail Sale Price"
                        android:textColorHint="@color/fontContentColor"
                        android:textSize="18sp"
                        android:maxLines="1"
                        android:inputType="numberDecimal"
                        android:fontFamily="@font/segoe_ui"
                        android:textColor="@color/fontContentColor"
                        android:paddingStart="15dp"/>

                </RelativeLayout>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="25dp"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginStart="70dp"
                android:layout_marginEnd="70dp"
                android:layout_centerHorizontal="true">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/line">

                    <TextView
                        android:id="@+id/rp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Retail Sale Price"
                        android:textColor="@color/fontHeadingColor"
                        android:textSize="19sp"/>

                    <EditText
                        android:id="@+id/addSalePriceEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/rp"
                        android:backgroundTint="@android:color/transparent"
                        android:hint="Retail Sale Price"
                        android:textColorHint="@color/fontContentColor"
                        android:textSize="18sp"
                        android:maxLines="1"
                        android:inputType="number"
                        android:fontFamily="@font/segoe_ui"
                        android:textColor="@color/fontContentColor"
                        android:paddingStart="15dp"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/line">

                    <TextView
                        android:id="@+id/hrp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Higher Retail Sale Price"
                        android:textColor="@color/fontHeadingColor"
                        android:textSize="19sp"/>


                    <EditText
                        android:id="@+id/addHigherRetailSalePriceEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/hrp"
                        android:backgroundTint="@android:color/transparent"
                        android:hint="Higher Retail Sale Price"
                        android:textColorHint="@color/fontContentColor"
                        android:textSize="18sp"
                        android:maxLines="1"
                        android:inputType="numberDecimal"
                        android:fontFamily="@font/segoe_ui"
                        android:textColor="@color/fontContentColor"
                        android:paddingStart="15dp"/>

                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/six"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="25dp"
                android:layout_below="@id/five"
                android:orientation="horizontal"
                android:layout_marginBottom="70dp"
                android:weightSum="2"
                android:layout_marginStart="70dp"
                android:layout_marginEnd="70dp"
                android:layout_centerHorizontal="true">


                <Button
                    android:id="@+id/addNewBatteryRecordBtn"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="45dp"
                    android:background="@drawable/login_button_bcg"
                    android:text="Submit"
                    android:textSize="22sp"
                    android:textColor="@android:color/white"/>

            </LinearLayout>


        </LinearLayout>

    </ScrollView>

    <ListView
        android:id="@+id/productNameListView"
        android:layout_width="450dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="55dp"
        android:layout_marginEnd="35dp"
        android:layout_marginTop="140dp"
        android:background="@android:color/white"
        android:scrollbars="none"
        android:elevation="8dp"
        android:dividerHeight="1dp"
        android:divider="@color/mobileListDividerColor"
        android:visibility="gone"/>

    <RelativeLayout
        android:id="@+id/form"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:background="@color/blackTranBcg"
        android:paddingEnd="15dp"
        android:paddingStart="15dp"
        android:paddingTop="15dp"
        android:layout_centerHorizontal="true"
        android:paddingBottom="20sp"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:padding="20dp"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Assign Battery To Technician!"
                android:textSize="22sp"
                android:textColor="@color/fontHeadingColor"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/segoe_ui_bold"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Battery Brand: "
                    android:textColor="@color/fontHeadingColor"
                    android:textSize="18sp"
                    android:fontFamily="@font/segoe_ui"/>

                <TextView
                    android:id="@+id/btryBrand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Brand"
                    android:textColor="@color/fontContentColor"
                    android:textSize="17sp"
                    android:fontFamily="@font/segoe_ui"
                    android:maxLines="1"
                    android:ellipsize="end"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="15dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Battery SKU: "
                    android:textColor="@color/fontHeadingColor"
                    android:textSize="18sp"
                    android:fontFamily="@font/segoe_ui"/>

                <TextView
                    android:id="@+id/btrySku"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SKU"
                    android:textColor="@color/fontContentColor"
                    android:textSize="17sp"
                    android:fontFamily="@font/segoe_ui"
                    android:maxLines="1"
                    android:ellipsize="end"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="15dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Size: "
                    android:textColor="@color/fontHeadingColor"
                    android:textSize="18sp"
                    android:fontFamily="@font/segoe_ui"/>

                <TextView
                    android:id="@+id/btrySize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="size"
                    android:textColor="@color/fontContentColor"
                    android:textSize="17sp"
                    android:fontFamily="@font/segoe_ui"
                    android:maxLines="1"
                    android:ellipsize="end"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="15dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quantity: "
                    android:textColor="@color/fontHeadingColor"
                    android:textSize="18sp"
                    android:fontFamily="@font/segoe_ui"/>

                <TextView
                    android:id="@+id/btryAvailableQty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="qty"
                    android:textColor="@color/fontContentColor"
                    android:textSize="17sp"
                    android:fontFamily="@font/segoe_ui"
                    android:maxLines="1"
                    android:ellipsize="end"/>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="350dp"
                android:layout_height="45dp"
                android:layout_marginEnd="35dp"
                android:layout_marginStart="35dp"
                android:layout_marginTop="35dp"
                android:background="@drawable/edit_text_bcg"
                android:layout_gravity="center_horizontal">

                <Spinner
                    android:id="@+id/techSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/blueOne"
                    android:gravity="center_vertical|start"
                    android:paddingStart="1dp"
                    android:paddingEnd="10dp"/>



            </RelativeLayout>

            <EditText
                android:id="@+id/assignedQuantity"
                android:layout_width="350dp"
                android:layout_height="45dp"
                android:background="@drawable/edit_text_bcg"
                android:layout_gravity="center_horizontal"
                android:hint="Assigned Quantity"
                android:layout_marginTop="20dp"
                android:paddingStart="15dp"
                android:inputType="numberDecimal"
                android:paddingEnd="10dp"
                android:textSize="22sp"
                android:fontFamily="@font/segoe_ui"
                android:textColorHint="@color/textHintColor"
                android:textColor="@color/blackTextColor"
                android:maxLines="1"/>

            <Button
                android:id="@+id/submitStockToTechBtn"
                android:layout_width="350dp"
                android:layout_height="45dp"
                android:layout_marginTop="20dp"
                android:text="Submit"
                android:textColor="@android:color/white"
                android:textSize="22sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="5dp"
                android:background="@drawable/login_button_bcg"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"/>


        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>