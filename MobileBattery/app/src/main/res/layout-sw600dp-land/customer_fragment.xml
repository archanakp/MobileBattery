<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10"
            android:paddingBottom="20dp"
            >
            <Button
                android:id="@+id/addNewCustomerBtn"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginBottom="0dp"
                android:layout_marginTop="20dp"
                android:text="+ New Customer"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:background="@drawable/login_button_bcg"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:orientation="horizontal"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@id/addNewCustomerBtn"
                android:weightSum="20">
                <EditText
                    android:id="@+id/searchByNameET"
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_height="35dp"
                    android:focusable="auto"
                    android:background="@drawable/edit_text_bcg"
                    android:layout_marginEnd="7dp"
                    android:layout_gravity="center_vertical"
                    android:hint="Name"
                    android:paddingStart="10dp"
                    android:fontFamily="@font/segoe_ui"
                    android:textColor="@color/fontContentColor"
                    android:textColorHint="@color/fontContentColor"
                    android:textSize="18sp"/>

                <EditText
                    android:id="@+id/searchByEmailET"
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_height="35dp"
                    android:focusable="auto"
                    android:background="@drawable/edit_text_bcg"
                    android:layout_marginStart="7dp"
                    android:layout_marginEnd="7dp"
                    android:layout_gravity="center_vertical"
                    android:hint="Email"
                    android:paddingStart="10dp"
                    android:fontFamily="@font/segoe_ui"
                    android:textColor="@color/fontContentColor"
                    android:textColorHint="@color/fontContentColor"
                    android:textSize="18sp"/>


                <EditText
                    android:id="@+id/searchByPhoneET"
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_height="35dp"
                    android:background="@drawable/edit_text_bcg"
                    android:layout_gravity="center_vertical"
                    android:hint="Phone No."
                    android:paddingStart="10dp"
                    android:layout_marginStart="7dp"
                    android:focusable="auto"
                    android:fontFamily="@font/segoe_ui"
                    android:textColor="@color/fontContentColor"
                    android:textColorHint="@color/fontContentColor"
                    android:textSize="18sp"/>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp">


                    <ImageButton
                        android:id="@+id/resetFilter"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/login_button_bcg"
                        android:src="@drawable/ic_refresh_white"/>


                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/label"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:background="@color/listDeviderColor"
                android:padding="0.5dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:weightSum="14">
                <RelativeLayout
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:background="#fff">
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="14">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="4"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Name"
                        android:layout_marginStart="0.5dp"
                        android:background="@android:color/white"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:textColor="@color/fontHeadingColor"
                        android:textSize="20sp"
                        android:fontFamily="@font/segoe_ui_bold"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="4.5"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_marginStart="0.5dp"
                        android:background="@android:color/white"
                        android:maxLines="1"
                        android:text="Email"
                        android:ellipsize="end"
                        android:textColor="@color/fontHeadingColor"
                        android:textSize="20sp"
                        android:fontFamily="@font/segoe_ui_bold"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="3.5"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_marginStart="0.5dp"
                        android:background="@android:color/white"
                        android:maxLines="1"
                        android:text="Contact"
                        android:ellipsize="end"
                        android:textColor="@color/fontHeadingColor"
                        android:textSize="22sp"
                        android:fontFamily="@font/segoe_ui_bold"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_marginStart="0.5dp"
                        android:background="@android:color/white"
                        android:maxLines="1"
                        android:text="Action"
                        android:ellipsize="end"
                        android:textColor="@color/fontHeadingColor"
                        android:textSize="22sp"
                        android:fontFamily="@font/segoe_ui_bold"
                        />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/noUserFoundTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No User Found!"
                android:fontFamily="@font/segoe_ui_bold"
                android:textColor="@color/fontHeadingColor"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/label"
                android:layout_marginTop="20dp"
                android:visibility="gone"
                android:textSize="24sp"/>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/customerRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/label"
                android:scrollbars="none"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:background="@android:color/white"
                android:visibility="visible"/>

        </RelativeLayout>
    </LinearLayout>

    <ScrollView
        android:id="@+id/newCustomerForm"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:background="@android:color/white"
        android:scrollbars="none"
        android:visibility="gone">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/closeCustomerFormBtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_close_blue"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_alignParentEnd="true"/>

            <LinearLayout
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="35dp"
                android:layout_marginEnd="35dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="@string/first_name"
                    android:textColor="@color/fontHeadingColor"
                    android:layout_marginTop="50dp"
                    android:fontFamily="@font/segoe_ui"/>

                <EditText
                    android:id="@+id/cFirstNameEditText"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="5dp"
                    android:textColorHint="@color/fontContentColor"
                    android:hint="@string/first_name"
                    android:paddingStart="10dp"
                    android:inputType="textEmailAddress"
                    android:paddingEnd="5dp"
                    android:backgroundTint="@color/blueOne"
                    android:fontFamily="@font/segoe_ui"
                    android:maxLines="1"
                    android:textSize="17sp"
                    android:textColor="@color/fontContentColor"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="@string/last_name"
                    android:textColor="@color/fontHeadingColor"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/segoe_ui"/>

                <EditText
                    android:id="@+id/cLastNameEditText"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="5dp"
                    android:textColorHint="@color/fontContentColor"
                    android:hint="@string/last_name"
                    android:paddingStart="10dp"
                    android:paddingEnd="5dp"
                    android:backgroundTint="@color/blueOne"
                    android:maxLines="1"
                    android:fontFamily="@font/segoe_ui"
                    android:textSize="17sp"
                    android:textColor="@color/fontContentColor"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="@string/user_name"
                    android:textColor="@color/fontHeadingColor"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/segoe_ui"/>

                <EditText
                    android:id="@+id/cUserNameEditText"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="5dp"
                    android:textColorHint="@color/fontContentColor"
                    android:hint="@string/user_name"
                    android:paddingStart="10dp"
                    android:paddingEnd="5dp"
                    android:backgroundTint="@color/blueOne"
                    android:fontFamily="@font/segoe_ui"
                    android:maxLines="1"
                    android:textSize="17sp"
                    android:textColor="@color/fontContentColor"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="@string/email_id"
                    android:textColor="@color/fontHeadingColor"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/segoe_ui"/>

                <EditText
                    android:id="@+id/cEmailIdEditText"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="5dp"
                    android:textColorHint="@color/fontContentColor"
                    android:hint="@string/email_id"
                    android:paddingStart="10dp"
                    android:inputType="textEmailAddress"
                    android:paddingEnd="5dp"
                    android:backgroundTint="@color/blueOne"
                    android:fontFamily="@font/segoe_ui"
                    android:maxLines="1"
                    android:textSize="17sp"
                    android:textColor="@color/fontContentColor"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="@string/phone"
                    android:textColor="@color/fontHeadingColor"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/segoe_ui"/>
                <EditText
                    android:id="@+id/cPhoneNoEditText"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="5dp"
                    android:backgroundTint="@color/blueOne"
                    android:hint="@string/phone"
                    android:inputType="phone"
                    android:maxLength="9"
                    android:maxLines="1"
                    android:paddingStart="10dp"
                    android:paddingEnd="5dp"
                    android:fontFamily="@font/segoe_ui"
                    android:textColor="@color/fontContentColor"
                    android:textColorHint="@color/fontContentColor"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/pass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="Password"
                    android:textColor="@color/fontHeadingColor"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/segoe_ui"/>
                <EditText
                    android:id="@+id/cPasswordEditText"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="5dp"
                    android:textColorHint="@color/fontContentColor"
                    android:hint="@string/password"
                    android:paddingStart="10dp"
                    android:inputType="textPassword"
                    android:paddingEnd="5dp"
                    android:backgroundTint="@color/blueOne"
                    android:maxLines="1"
                    android:textSize="17sp"
                    android:textColor="@color/fontContentColor"
                    />

                <TextView
                    android:id="@+id/conPass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="@string/con_password"
                    android:textColor="@color/fontHeadingColor"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/segoe_ui"/>
                <EditText
                    android:id="@+id/cConPassEditText"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="5dp"
                    android:textColorHint="@color/fontContentColor"
                    android:hint="@string/con_password"
                    android:paddingStart="10dp"
                    android:paddingEnd="5dp"
                    android:backgroundTint="@color/blueOne"
                    android:maxLines="1"
                    android:inputType="textPassword"
                    android:fontFamily="@font/segoe_ui"
                    android:textSize="17sp"
                    android:textColor="@color/fontContentColor"
                    />
                <Button
                    android:id="@+id/registerCustomer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Register"
                    android:textColor="@android:color/white"
                    android:textSize="22sp"
                    android:fontFamily="@font/segoe_ui"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/login_button_bcg"
                    android:paddingEnd="30dp"
                    android:paddingStart="30dp"
                    android:layout_marginBottom="20dp"
                    />


            </LinearLayout>
        </RelativeLayout>

    </ScrollView>

</RelativeLayout>