<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@color/listDeviderColor"
        android:padding="0.5dp"
        android:weightSum="10">
        <TextView
            android:id="@+id/insIdTV"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:maxLines="1"
            android:ellipsize="end"
            android:background="@android:color/white"
            android:text="sdfsx"
            android:gravity="start|center_vertical"
            android:paddingStart="10dp"
            android:paddingEnd="5dp"
            android:textColor="@color/fontContentColor"
            android:textSize="18sp"
            android:fontFamily="@font/segoe_ui_bold"
            />
        <TextView
            android:id="@+id/insDateTV"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:maxLines="1"
            android:paddingStart="10dp"
            android:gravity="start|center_vertical"
            android:paddingEnd="5dp"
            android:text="asdfa"
            android:ellipsize="end"
            android:layout_marginStart="0.5dp"
            android:background="@android:color/white"
            android:textColor="@color/fontContentColor"
            android:textSize="16sp"
            android:fontFamily="@font/segoe_ui"
            />
        <TextView
            android:id="@+id/renewalDateTV"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:maxLines="1"
            android:gravity="start|center_vertical"
            android:layout_marginStart="0.5dp"
            android:background="@android:color/white"
            android:text="hygjh"
            android:paddingStart="10dp"
            android:paddingEnd="5dp"
            android:ellipsize="end"
            android:textColor="@color/fontContentColor"
            android:textSize="16sp"
            android:fontFamily="@font/segoe_ui"
            />

        <RelativeLayout
            android:id="@+id/action"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:paddingEnd="8dp"
            android:layout_marginStart="0.5dp"
            >
            <View
                android:id="@+id/centerView"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"/>

            <ImageView
                android:id="@+id/editBtn"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_edit_black"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@id/centerView"
                android:layout_marginEnd="5dp"/>

            <ImageView
                android:id="@+id/deleteBtn"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_delete_black"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/centerView"
                android:layout_marginStart="5dp"/>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>