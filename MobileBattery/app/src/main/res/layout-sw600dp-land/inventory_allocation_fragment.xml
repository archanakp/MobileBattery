<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:weightSum="4"
            >

            <RelativeLayout
                android:id="@+id/findStockTechId"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="35dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_centerVertical="true"
                android:background="@drawable/edit_text_bcg"
                android:visibility="visible">
                <Spinner
                    android:id="@+id/techNameSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/blueOne"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="35dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"
                android:visibility="visible">
                <ImageButton
                    android:id="@+id/resetFilter"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/login_button_bcg"
                    android:src="@drawable/ic_refresh_white"
                    />
            </RelativeLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@color/listDeviderColor"
            android:orientation="horizontal"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:padding="0.5dp">

            <RelativeLayout
                android:layout_width="65dp"
                android:layout_height="match_parent"
                android:background="#fff"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="12"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="match_parent"
                    android:text="Tech. Name"
                    android:textSize="20sp"
                    android:gravity="start|center_vertical"
                    android:paddingStart="10dp"
                    android:background="@android:color/white"
                    android:textColor="@color/fontHeadingColor"
                    android:layout_marginStart="0.5dp"
                    android:fontFamily="@font/segoe_ui_bold"
                    android:maxLines="1"
                    android:ellipsize="end"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="match_parent"
                    android:text="Brand Name"
                    android:textSize="20sp"
                    android:gravity="start|center_vertical"
                    android:paddingStart="10dp"
                    android:background="@android:color/white"
                    android:textColor="@color/fontHeadingColor"
                    android:layout_marginStart="0.5dp"
                    android:fontFamily="@font/segoe_ui_bold"
                    android:maxLines="1"
                    android:ellipsize="end"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="match_parent"
                    android:background="@android:color/white"
                    android:text="Battery SKU"
                    android:textSize="20sp"
                    android:paddingStart="10dp"
                    android:gravity="center_vertical|start"
                    android:textColor="@color/fontHeadingColor"
                    android:layout_marginStart="0.5dp"
                    android:fontFamily="@font/segoe_ui_bold"
                    android:maxLines="1"
                    android:ellipsize="end"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="match_parent"
                    android:background="@android:color/white"
                    android:text="Assigned Qty. "
                    android:textSize="20sp"
                    android:paddingStart="5dp"
                    android:gravity="start|center_vertical"
                    android:textColor="@color/fontHeadingColor"
                    android:layout_marginStart="0.5dp"
                    android:fontFamily="@font/segoe_ui_bold"
                    android:maxLines="1"
                    android:ellipsize="end"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="match_parent"
                    android:background="@android:color/white"
                    android:gravity="start|center_vertical"
                    android:text="Sold"
                    android:textSize="20sp"
                    android:paddingStart="10dp"
                    android:textColor="@color/fontHeadingColor"
                    android:layout_marginStart="0.5dp"
                    android:fontFamily="@font/segoe_ui_bold"
                    android:maxLines="1"
                    android:ellipsize="end"/>


            </LinearLayout>

        </LinearLayout>

        <ListView
            android:id="@+id/allocatedBatteryList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:background="@android:color/white"
            android:scrollbars="none"
            android:visibility="visible"/>

    </LinearLayout>



</RelativeLayout>