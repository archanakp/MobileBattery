<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:paddingStart="30dp">

        <TextView
            android:id="@+id/insNoLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="19sp"
            android:text="Service No.: "
            android:visibility="gone"
            android:layout_above="@id/serviceIdTextView"
            android:textColor="@color/fontHeadingColor"
            android:fontFamily="@font/segoe_ui_bold"
            />
        <TextView
            android:id="@+id/idTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_above="@id/serviceIdTextView"
            android:text="sdfsx"
            android:layout_toStartOf="@id/action"
            android:layout_toEndOf="@id/insNoLabel"
            android:paddingEnd="5dp"
            android:textColor="@color/fontHeadingColor"
            android:textSize="18sp"
            android:fontFamily="@font/segoe_ui_bold"
            />


        <TextView
            android:id="@+id/insDateLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Service Date: "
            android:layout_centerVertical="true"
            android:textColor="@color/fontHeadingColor"
            android:fontFamily="@font/segoe_ui"
            />
        <TextView
            android:id="@+id/serviceIdTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:paddingStart="10dp"
            android:paddingEnd="5dp"
            android:text="asdfa"
            android:layout_toStartOf="@id/action"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/insDateLabel"
            android:ellipsize="end"
            android:textColor="@color/fontContentColor"
            android:textSize="16sp"
            android:fontFamily="@font/segoe_ui"
            />


        <TextView
            android:id="@+id/insRenDateLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Next Service: "
            android:layout_below="@id/serviceIdTextView"
            android:textColor="@color/fontHeadingColor"
            android:fontFamily="@font/segoe_ui"
            />
        <TextView
            android:id="@+id/kmCompletedTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="hygjh"
            android:paddingStart="10dp"
            android:layout_toStartOf="@id/action"
            android:layout_toEndOf="@id/insRenDateLabel"
            android:layout_below="@id/serviceIdTextView"
            android:paddingEnd="5dp"
            android:ellipsize="end"
            android:textColor="@color/fontContentColor"
            android:textSize="16sp"
            android:fontFamily="@font/segoe_ui"
            />

        <RelativeLayout
            android:id="@+id/action"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:paddingEnd="8dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            >
            <View
                android:id="@+id/centerView"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"/>

            <ImageView
                android:id="@+id/editBtn"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_edit_black"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@id/centerView"
                android:layout_marginEnd="5dp"/>

            <ImageView
                android:id="@+id/deleteBtn"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_delete_black"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/centerView"
                android:layout_marginStart="5dp"/>

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>