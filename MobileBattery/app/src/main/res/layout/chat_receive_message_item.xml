<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:orientation="horizontal">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/senderProfileImage"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:layout_margin="10dp"
        android:src="@drawable/person"/>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:elevation="8dp"
        android:background="@drawable/three_round_corner_white_bcg">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="60dp">

            <TextView
                android:id="@+id/senderMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="60dp"
                android:hint="Hi I am going to home tonight for a urgent work so please give me leave for a weak and get plesser"
                android:textColorHint="@color/fontContentColor"
                android:textColor="@color/fontContentColor"
                android:fontFamily="@font/segoe_ui"
                android:layout_margin="10dp"
                android:textSize="16sp"
                android:layout_alignParentStart="true"/>

            <TextView
                android:id="@+id/messageTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10:25"
                android:textColor="@color/fontContentColor"
                android:fontFamily="@font/segoe_ui_italic"
                android:layout_marginBottom="10dp"
                android:textSize="16sp"
                android:maxLines="1"
                android:layout_below="@id/senderMessage"
                android:layout_alignEnd="@id/senderMessage"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>