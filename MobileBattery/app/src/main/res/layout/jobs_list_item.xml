<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:background="@android:color/white"
        android:paddingStart="25dp"
        android:paddingEnd="5dp"
        android:weightSum="14">
        <TextView
            android:id="@+id/customerNameTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:maxLines="1"
            android:text="dcdzc"
            android:layout_toStartOf="@id/action"
            android:layout_above="@id/locationTV"
            android:ellipsize="end"
            android:textColor="@color/fontHeadingColor"
            android:textSize="18sp"
            android:fontFamily="@font/segoe_ui_bold"
            />
        <TextView
            android:id="@+id/locationTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="adad"
            android:layout_toStartOf="@id/action"
            android:layout_centerVertical="true"
            android:textColor="@color/fontContentColor"
            android:textSize="16sp"
            android:fontFamily="@font/segoe_ui"
            />
        <TextView
            android:id="@+id/sourceOfCallTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0.5dp"
            android:gravity="center"
            android:background="@android:color/white"
            android:maxLines="1"
            android:ellipsize="end"
            android:visibility="gone"
            android:textColor="@color/blackTextColor"
            android:textSize="22sp"
            android:fontFamily="@font/segoe_ui"
            />
        <TextView
            android:id="@+id/issueTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:background="@android:color/white"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_toStartOf="@id/action"
            android:text="efs"
            android:layout_below="@id/locationTV"
            android:textColor="@color/fontContentColor"
            android:textSize="16sp"
            android:fontFamily="@font/segoe_ui"
            />
        <RelativeLayout
            android:id="@+id/action"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:layout_alignParentEnd="true"
            >

            <ImageView
                android:id="@+id/assignJobBtn"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_assign"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@id/editJobBtn"
                android:layout_marginEnd="7dp"/>

            <ImageView
                android:id="@+id/editJobBtn"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_edit_black"
                android:layout_centerInParent="true"/>

            <ImageView
                android:id="@+id/deleteJobBtn"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_delete_black"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/editJobBtn"
                android:layout_marginStart="5dp"/>

        </RelativeLayout>

    </RelativeLayout>


</LinearLayout>