<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:orientation="horizontal"
        android:background="@android:color/white"
        android:weightSum="14">
        <RelativeLayout
            android:layout_width="88dp"
            android:layout_height="match_parent">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/customerImageIcon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/person"
                android:layout_centerInParent="true"
                app:civ_border_color="@color/blueOne"
                app:civ_border_width="1dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/customerUserNameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:paddingStart="10dp"
                android:background="@android:color/white"
                android:maxLines="1"
                android:text="jkdfgjd"
                android:layout_toStartOf="@id/end"
                android:layout_marginEnd="5dp"
                android:ellipsize="end"
                android:layout_above="@id/customerEmailTextView"
                android:textColor="@color/blueOne"
                android:textSize="18sp"
                android:fontFamily="@font/segoe_ui_bold"
                />
            <TextView
                android:id="@+id/customerEmailTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:paddingStart="10dp"
                android:layout_marginEnd="5dp"
                android:layout_centerVertical="true"
                android:background="@android:color/white"
                android:maxLines="1"
                android:text="jkadghfj"
                android:layout_toStartOf="@id/end"
                android:ellipsize="end"
                android:textColor="@color/fontContentColor"
                android:textSize="16sp"
                android:fontFamily="@font/segoe_ui"
                />
            <TextView
                android:id="@+id/customerPhoneTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:layout_marginEnd="5dp"
                android:layout_below="@id/customerEmailTextView"
                android:background="@android:color/white"
                android:maxLines="1"
                android:layout_toStartOf="@id/end"
                android:text="dafasd"
                android:paddingStart="10dp"
                android:ellipsize="end"
                android:textColor="@color/fontContentColor"
                android:textSize="16sp"
                android:fontFamily="@font/segoe_ui"
                />
            <RelativeLayout
                android:id="@+id/end"
                android:layout_width="65dp"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                android:layout_alignParentEnd="true"
                >
                <View
                    android:id="@+id/centerView"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"/>

                <ImageView
                    android:id="@+id/editCustomerBtn"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_edit_black"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@id/centerView"
                    android:layout_marginEnd="5dp"/>

                <ImageView
                    android:id="@+id/deleteCustomerBtn"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_delete_black"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/centerView"
                    android:layout_marginStart="5dp"/>

            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/mobileListDividerColor"/>

</LinearLayout>