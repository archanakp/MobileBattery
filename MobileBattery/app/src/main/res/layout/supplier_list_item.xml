<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="89dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:paddingStart="30dp">

            <TextView
                android:id="@+id/supplierNameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/supplierEmailTextView"
                android:layout_toStartOf="@id/action"
                android:ellipsize="end"
                android:fontFamily="@font/segoe_ui_bold"
                android:maxLines="1"
                android:paddingStart="10dp"
                android:paddingEnd="5dp"
                android:text="sdfsx"
                android:textColor="@color/fontHeadingColor"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/supplierEmailTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@id/action"
                android:ellipsize="end"
                android:fontFamily="@font/segoe_ui"
                android:maxLines="1"
                android:paddingStart="10dp"
                android:paddingEnd="5dp"
                android:text="asdfa"
                android:textColor="@color/fontContentColor"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/supplierPhoneTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/supplierEmailTextView"
                android:layout_toStartOf="@id/action"
                android:ellipsize="end"
                android:fontFamily="@font/segoe_ui"
                android:maxLines="1"
                android:paddingStart="10dp"
                android:paddingEnd="5dp"
                android:text="hygjh"
                android:textColor="@color/fontContentColor"
                android:textSize="16sp" />

            <RelativeLayout
                android:id="@+id/action"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:paddingEnd="8dp">

                <View
                    android:id="@+id/centerView"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true" />

                <ImageView
                    android:id="@+id/editSupplierBtn"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="5dp"
                    android:layout_toStartOf="@id/centerView"
                    android:src="@drawable/ic_edit_black" />

                <ImageView
                    android:id="@+id/deleteSupplierBtn"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="5dp"
                    android:layout_toEndOf="@id/centerView"
                    android:src="@drawable/ic_delete_black" />

            </RelativeLayout>

        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/mobileListDividerColor"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

</LinearLayout>