<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@color/listDeviderColor"
        android:padding="0.5dp"
        android:weightSum="14">
        <TextView
            android:id="@+id/techNameTextView"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:gravity="start|center_vertical"
            android:background="@android:color/white"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/blackTextColor"
            android:textSize="22sp"
            android:fontFamily="@font/segoe_ui"
            />
        <TextView
            android:id="@+id/noPlateTextView"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:layout_marginStart="0.5dp"
            android:gravity="start|center_vertical"
            android:background="@android:color/white"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/blackTextColor"
            android:textSize="22sp"
            android:fontFamily="@font/segoe_ui"
            />
        <TextView
            android:id="@+id/regDateTextView"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:layout_marginStart="0.5dp"
            android:gravity="start|center_vertical"
            android:background="@android:color/white"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/blackTextColor"
            android:textSize="22sp"
            android:fontFamily="@font/segoe_ui"
            />
        <TextView
            android:id="@+id/kmReadingTextView"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:layout_marginStart="0.5dp"
            android:gravity="start|center_vertical"
            android:background="@android:color/white"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/blackTextColor"
            android:textSize="22sp"
            android:fontFamily="@font/segoe_ui"
            />
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:layout_marginStart="0.5dp"
            >

            <ImageView
                android:id="@+id/assignBtn"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_assign"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@id/editBtn"
                android:layout_marginEnd="7dp"/>

            <ImageView
                android:id="@+id/editBtn"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_edit_black"
                android:layout_centerInParent="true"/>

            <ImageView
                android:id="@+id/deleteBtn"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_delete_black"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/editBtn"
                android:layout_marginStart="5dp"/>

        </RelativeLayout>

    </LinearLayout>


</LinearLayout>