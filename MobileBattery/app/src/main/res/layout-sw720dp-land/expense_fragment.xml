<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/relativeLayout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp">

            <Button
                android:id="@+id/addExpenseBtn"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:background="@drawable/login_button_bcg"
                android:text="+ Expense  "
                android:textAllCaps="false"
                android:layout_alignParentEnd="true"
                android:textSize="16sp"
                android:fontFamily="@font/segoe_ui"
                android:textColor="@android:color/white"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:layout_toStartOf="@id/addExpenseBtn"
                android:weightSum="4">

                <EditText
                    android:id="@+id/searchByDateET"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="40dp"
                    android:background="@drawable/edit_text_bcg"
                    android:hint="Date"
                    android:paddingStart="10dp"
                    android:layout_marginEnd="7dp"
                    android:textAllCaps="false"
                    android:textSize="18sp"
                    android:focusable="false"
                    android:fontFamily="@font/segoe_ui"
                    android:textColor="@color/fontContentColor"/>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="40dp"
                    android:background="@drawable/edit_text_bcg"
                    android:layout_marginStart="7dp">

                    <Spinner
                        android:id="@+id/searchByUserIdSpinner"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:backgroundTint="@color/blueOne"
                        android:paddingStart="10dp"
                        android:paddingEnd="5dp"/>

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="40dp">

                    <ImageView
                        android:id="@+id/refreshListIV"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_refresh_white"
                        android:scaleType="centerInside"
                        android:background="@drawable/login_button_bcg"
                        android:layout_marginStart="15dp"/>

                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:background="@color/listDeviderColor"
            android:padding="0.5dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="10dp"
            android:elevation="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:weightSum="14">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Purpose"
                    android:layout_marginStart="0.5dp"
                    android:background="@android:color/white"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColor="@color/fontHeadingColor"
                    android:textSize="22sp"
                    android:fontFamily="@font/segoe_ui_bold"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="4.5"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Amount"
                    android:layout_marginStart="0.5dp"
                    android:background="@android:color/white"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColor="@color/fontHeadingColor"
                    android:textSize="22sp"
                    android:fontFamily="@font/segoe_ui_bold"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="3.5"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Date"
                    android:layout_marginStart="0.5dp"
                    android:background="@android:color/white"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColor="@color/fontHeadingColor"
                    android:textSize="22sp"
                    android:fontFamily="@font/segoe_ui_bold"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="match_parent"
                    android:background="@android:color/white"
                    android:layout_margin="0.5dp"
                    android:text="Action"
                    android:textSize="22sp"
                    android:textColor="@color/fontHeadingColor"
                    android:gravity="center"
                    android:fontFamily="@font/segoe_ui_bold"
                    />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/noResultFoundTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Result Found!"
            android:fontFamily="@font/segoe_ui_bold"
            android:textColor="@color/fontHeadingColor"
            android:layout_gravity="center_horizontal"
            android:visibility="gone"
            android:layout_marginTop="20dp"
            android:textSize="30dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/expenseRecyclerList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:elevation="5dp"
            android:background="@android:color/white"/>



    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:layout_centerInParent="true"
        android:visibility="visible"/>

    <RelativeLayout
        android:id="@+id/actionLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:visibility="gone">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/closeFormIV"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_close_blue"
                    android:layout_gravity="end"
                    android:layout_margin="10dp"/>

                <LinearLayout
                    android:layout_width="450dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:orientation="vertical"
                    android:paddingStart="25dp"
                    android:paddingEnd="25dp"
                    android:paddingTop="5dp"
                    android:layout_gravity="center_horizontal"
                    android:paddingBottom="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="User"
                        android:fontFamily="@font/segoe_ui"
                        android:textColor="@color/fontHeadingColor"
                        android:textSize="18sp"/>

                    <Spinner
                        android:id="@+id/userSpinner"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:backgroundTint="@color/blueOne"
                        android:hint="Amount"
                        android:textColorHint="@color/fontContentColor"
                        android:paddingStart="10dp"
                        android:paddingEnd="5dp"
                        android:layout_marginTop="8dp"
                        android:maxLines="1"
                        android:textColor="@color/fontContentColor"
                        android:textSize="18sp"
                        android:fontFamily="@font/segoe_ui"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/blueOne"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="3dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Amount"
                        android:fontFamily="@font/segoe_ui"
                        android:textColor="@color/fontHeadingColor"
                        android:textSize="18sp"/>

                    <EditText
                        android:id="@+id/amountET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/blueOne"
                        android:hint="Amount"
                        android:textColorHint="@color/fontContentColor"
                        android:paddingStart="10dp"
                        android:paddingEnd="5dp"
                        android:layout_marginTop="8dp"
                        android:maxLines="1"
                        android:inputType="numberDecimal"
                        android:textColor="@color/fontContentColor"
                        android:textSize="18sp"
                        android:fontFamily="@font/segoe_ui"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Purpose"
                        android:fontFamily="@font/segoe_ui"
                        android:textColor="@color/fontHeadingColor"
                        android:textSize="18sp"/>

                    <EditText
                        android:id="@+id/purposeET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/blueOne"
                        android:hint="Purpose"
                        android:textColorHint="@color/fontContentColor"
                        android:paddingStart="10dp"
                        android:paddingEnd="5dp"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/fontContentColor"
                        android:textSize="18sp"
                        android:fontFamily="@font/segoe_ui"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Description"
                        android:fontFamily="@font/segoe_ui"
                        android:textColor="@color/fontHeadingColor"
                        android:textSize="18sp"/>

                    <EditText
                        android:id="@+id/descriptionET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/blueOne"
                        android:hint="Description"
                        android:textColorHint="@color/fontContentColor"
                        android:paddingStart="10dp"
                        android:paddingEnd="5dp"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/fontContentColor"
                        android:textSize="18sp"
                        android:fontFamily="@font/segoe_ui"/>

                    <ImageView
                        android:id="@+id/receiptImageView"
                        android:layout_width="wrap_content"
                        android:layout_height="150dp"
                        android:paddingBottom="10dp"
                        android:layout_gravity="center_horizontal"
                        android:visibility="gone"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Receipt Image"
                        android:fontFamily="@font/segoe_ui"
                        android:textColor="@color/fontHeadingColor"
                        android:textSize="18sp"/>

                    <EditText
                        android:id="@+id/receiptImageET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/blueOne"
                        android:hint="Choose Receipt Image"
                        android:textColorHint="@color/fontContentColor"
                        android:paddingStart="10dp"
                        android:paddingEnd="5dp"
                        android:focusable="false"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/fontContentColor"
                        android:textSize="18sp"
                        android:fontFamily="@font/segoe_ui"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Date"
                        android:fontFamily="@font/segoe_ui"
                        android:textColor="@color/fontHeadingColor"
                        android:textSize="18sp"/>

                    <EditText
                        android:id="@+id/dateET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/blueOne"
                        android:hint="Choose Date"
                        android:textColorHint="@color/fontContentColor"
                        android:paddingStart="10dp"
                        android:paddingEnd="5dp"
                        android:focusable="false"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/fontContentColor"
                        android:textSize="18sp"
                        android:fontFamily="@font/segoe_ui"/>


                    <Button
                        android:id="@+id/saveExpensesBtn"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/login_button_bcg"
                        android:layout_marginTop="20dp"
                        android:text="Save"
                        android:textAllCaps="false"
                        android:textSize="20sp"
                        android:textColor="@android:color/white"
                        android:fontFamily="@font/segoe_ui_bold"/>

                </LinearLayout>
            </LinearLayout>

        </ScrollView>

    </RelativeLayout>

</RelativeLayout>